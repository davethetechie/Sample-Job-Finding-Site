<%= form_for @job,  :html => { class:'form-horizontal'} do |f| %>
     <div class="form-group">
          <%= f.label :job_Title %>
          <%= f.select :title, ['Babysitter', 'Landscaper', 'Dog Walker', 'Tutor', 'Odd Jobs'], {}, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :Job_Description %>
          <%= f.text_area :description, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :photo %>
          <%= f.file_field :avatar, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :Posted_by %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.label :link_to_your_job %>
          <%= f.text_field :url, class: 'form-control' %>
        </div>
         <div class="form-group">
          <%= f.submit "Post", class: 'btn btn-primary outline-buttons' %>
        </div>
    </div>

<% end %>