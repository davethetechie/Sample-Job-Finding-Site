        <%= link_to "Delete",  job_path(@job), method: :delete, data: { confirm: "Are you sure? You cant undue this."}, class: 'btn btn-success' %>
         
        
        
        
        <% if current_user.plan_id == 2 %>
        <% end %>
    </div>
</div>