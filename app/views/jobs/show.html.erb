<div class="row">
    <div class="col-md-3 text-center">
        <span class="round"> <%= image_tag @job.avatar.url, class: 'user-show-avatar' %></span>
    </div>
    <div class="col-md-6">
        <h1><%= @job.name %> needs a <%= @job.title %></h1> 
        <div class="well">
