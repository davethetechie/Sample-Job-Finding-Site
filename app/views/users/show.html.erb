<div class="row">
    <div class="col-md-3 text-center">
        <span class="round"> <%= image_tag @user.profile.avatar.url, class: 'user-show-avatar' %></span>
    </div>
    <div class="col-md-6">
        <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
        <h3><span class="job_type_icon"><%= job_type_icon %></span> <%= @user.profile.job_type %></h3> 
        <div class="well profile-block profile-description">
            <h3>Description</h3>
            <h4>Just a little bit about <%= @user.profile.first_name %> </h4>
            <%= @user.profile.description %>
        </div>
         
        
        <% if current_user.plan_id == 2 %>
            <div class="well profile-block pro-goodies">
                <h3>Contact Information</h3>
                <h4>Feeling lucky? Give <%= @user.profile.first_name %> a call! Talk over the job.</h4>
                <h5><%= @user.profile.phone_number %></h5>
                <h4>Maybe you're an email type of person...we have you coverd too!</h4>
                <%= @user.profile.contact_email %><br/>
            </div>
            <div class="well profile-block extras">
                <h3>References and Prior Work</h3>
                <h4>References</h4>
                <%= @user.profile.references %><br/>
                <h4>Prior Work</h4>
                <%= @user.profile.prior_work %><br/>
            </div>
            <div class="well background-check">
                <h7>Need some more information on <%= @user.profile.first_name %> <%= @user.profile.last_name %>? </h7>
                <p>Get a background check from "LINK HERE"</p>
                
            </div>
           
            
        <% end %>
    </div>
</div>